<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:minHeight="120dp"
    android:maxHeight="120dp"
    android:padding="10dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/new_img_loading_1"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_image"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="红烧肉"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/tv_price_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:singleLine="true"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_image"
        android:text="￥12.00  0.0分"
        android:textColor="#db6958"/>
    <TextView
        android:id="@+id/tv_sell_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_image"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/tv_price_grade"
        android:textSize="16sp"
        android:singleLine="true"
        android:text="￥12"
        android:textColor="#db6958"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_image"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4sp"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="12sp"
        android:text="红星饭店"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/iv_image"
        android:layout_below="@id/tv_price_grade"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4sp"
        android:textSize="12sp"
        android:ellipsize="end"
        android:text="介绍基本介绍基本介绍基本介绍基本介本介绍基本介绍基本介本介绍基本介绍基本介本介绍基本介绍基本介本介绍基本介绍基本介本介绍基本介绍基本介本介绍基本介绍基本介本介绍基本介绍基本介本介绍基本介绍基本介本介绍基本介绍基本介本介绍基本介绍基本介本介绍基本介绍基本介本介绍基本介绍基本介本介绍基本介绍基本介本介绍基本介绍基本介绍基本介绍基本介绍基本介绍基本介绍"/>

        <TextView
            android:id="@+id/tv_delete"
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:text="删除"
            android:textColor="#f54545"
            android:textAlignment="center"
            android:textSize="25sp"
            android:background="#e03c3f41"/>

</RelativeLayout>
