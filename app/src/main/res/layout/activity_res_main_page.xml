<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <!--分割线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/ib_res_main_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bar_left_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="餐厅主页"
            android:textColor="#564c4c"
            android:textSize="20sp" />

        <ImageButton
            android:visibility="gone"
            android:id="@+id/ib_good_info_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_more" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeee" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_res_image"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/new_img_loading_2" />
                    <TextView
                        android:id="@+id/tv_res_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="#323427" />
                    <TextView
                        android:id="@+id/tv_res_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="#767f86" />
                    <TextView
                        android:id="@+id/tv_res_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="#767f86" />
                    <TextView
                        android:id="@+id/tv_res_grade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="￥150.00"
                        android:textColor="#767f86" />
                    <TextView
                        android:id="@+id/tv_res_sell_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="￥150.00"
                        android:textColor="#767f86" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="10dp"
                        android:background="#eeee" />
                    <TextView
                        android:id="@+id/tv_res_detail"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text=""
                        android:textColor="#3c3d40"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="50dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="#eeee" />

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_goods_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#fff">

            <TextView
                android:id="@+id/tv_res_dish_list"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="2dp"
                android:text="查看该店菜品"
                android:textColor="#fff"
                android:background="#fd6b2e"/>


        </LinearLayout>
    </FrameLayout>


</LinearLayout>
