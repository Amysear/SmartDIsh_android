<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <!--分割线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/ib_res_main_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bar_left_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单详情"
            android:textColor="#564c4c"
            android:textSize="20sp" />

        <ImageButton
            android:visibility="gone"
            android:id="@+id/ib_good_info_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_more" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeee" />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="#f1f1f1"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/tv_restaurant_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ff7a05"
            android:text="xxx餐厅 >"/>

        <TextView
            android:id="@+id/tv_order_state"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f33b3b"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:text="未付款"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeee" />

    <ListView
        android:id="@+id/lv_order_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:background="#f1f1f1">

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="xx年xx月xx日 xx:xx:xx"/>

        <TextView
            android:id="@+id/tv_dish_count_total_price"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="共计 200 元"/>
    </RelativeLayout>
</LinearLayout>
