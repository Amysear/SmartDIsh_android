<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="smartdish.com.base.activity.MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rg_main">

    </FrameLayout>

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <RadioButton
            android:id="@+id/rb_dish"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/dish_button_selector"
            android:text="菜品"

            />

        <RadioButton
            android:id="@+id/rb_res"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/res_button_selector"
            android:text="餐厅"

            />

        <RadioButton
            android:id="@+id/rb_cart"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/favorite_button_selector"
            android:text="购物车"

            />

        <RadioButton
            android:id="@+id/rb_order"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/order_button_selector"
            android:text="订单"

            />

        <RadioButton
            android:id="@+id/rb_me"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/me_button_selector"
            android:text="我"

            />

    </RadioGroup>


</RelativeLayout>
